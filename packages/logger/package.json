{
  "name": "@scilent-one/logger",
  "version": "0.2.0",
  "private": true,
  "description": "Structured logging infrastructure for scilent-one applications",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./next": {
      "types": "./src/next/index.ts",
      "default": "./src/next/index.ts"
    },
    "./auth": {
      "types": "./src/auth/hooks.ts",
      "default": "./src/auth/hooks.ts"
    }
  },
  "scripts": {
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "pino": "^9.9.5"
  },
  "devDependencies": {
    "@scilent-one/tooling": "workspace:*",
    "@types/node": "^25.0.10",
    "next": "^16.1.6",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "pino-pretty": "^13.1.3"
  },
  "peerDependenciesMeta": {
    "pino-pretty": {
      "optional": true
    }
  }
}
