{
  "name": "@scilent-one/ui",
  "version": "0.3.1",
  "private": true,
  "description": "Shared UI components for the monorepo",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./utils": {
      "types": "./src/utils.ts",
      "default": "./src/utils.ts"
    },
    "./globals.css": "./src/globals.css"
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "test": "vitest --project unit",
    "test:run": "vitest run --project unit",
    "test:coverage": "vitest run --project unit --coverage",
    "test:storybook": "vitest --project storybook",
    "test:storybook:run": "vitest run --project storybook",
    "ui:add": "npx shadcn@latest add",
    "sandbox": "vite --config sandbox/vite.config.ts",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build -o storybook-static",
    "chromatic": "npx chromatic --build-script-name=storybook:build"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.11",
